<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/placeholder"
        android:layout_marginBottom="12dp"
        />
    <ImageView
        android:id="@+id/greenCircleImage"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circle_shape_green"
        android:layout_alignRight="@+id/profilePic"
        android:layout_alignBottom="@+id/profilePic" />

    <TextView
        android:id="@+id/ContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profilePic"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/profilePic"
        android:layout_toRightOf="@+id/profilePic"
        android:fontFamily="sans-serif"
        android:text="Nameofcontact"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/Contact_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="35"
        android:textColor="#fff"
        android:text="message"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/tick"
        android:layout_toRightOf="@+id/tick"
        android:layout_toEndOf="@+id/tick"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/doubleright24pxwhite"
        android:maxHeight="15dp"
        android:maxWidth="15dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/ContactName"
        android:layout_alignLeft="@+id/ContactName"
        android:layout_alignStart="@+id/ContactName"
        android:layout_marginTop="10dp"/>

</RelativeLayout>